<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playground_sport_separator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:layout_marginBottom="@dimen/playground_card_separator_margin_bottom"
    android:layout_marginTop="@dimen/playground_card_separator_margin_top">

    <!-- Sport -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/playground_card_separator_text_margin_start"
        android:orientation="horizontal"
        android:gravity="center">
        <!-- sport name -->
        <TextView
            android:id="@+id/playground_separator_sport_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/playground_card_default_sport_name"
            android:textSize="@dimen/playground_card_separator_text_size"
            android:textColor="@color/playground_card_separator_text_color"
            />

        <!-- sport emoji -->
        <TextView
            android:id="@+id/playground_separator_sport_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playground_card_default_sport_icon"
            android:textSize="@dimen/playground_card_separator_text_size"
            android:includeFontPadding="false"
            android:layout_marginStart="5sp"
            android:textColor="@color/black"
            android:paddingBottom="2sp"/>


    </LinearLayout>

    <!-- horizontal line -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="@dimen/playground_card_separator_width"
        android:layout_height="@dimen/playground_card_separator_height"
        app:dividerColor="@color/playground_card_separator_color"
        android:layout_marginTop="2dp"/>

</LinearLayout>