<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <!-- one sport achievement -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/at_least_one_sport_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/at_least_five_sports_layout"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/at_least_one_sport_achievement"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/at_least_one_sport_achievement_description"
            app:layout_constraintBottom_toTopOf="@id/at_least_one_sport_achievement_text"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/one_sport_achievement_black" />

        <TextView
            android:id="@+id/at_least_one_sport_achievement_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="3dp"
            android:text="@string/at_least_one_sport_achievement_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/at_least_one_sport_achievement" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- five sports achievement -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/at_least_five_sports_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/all_sports_layout"
        app:layout_constraintStart_toEndOf="@id/at_least_one_sport_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/at_least_five_sports_achievement"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/at_least_five_sports_achievement_description"
            app:layout_constraintBottom_toTopOf="@id/at_least_five_sport_achievement_text"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/five_sports_achievement_black"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/at_least_five_sport_achievement_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="3dp"
            android:text="@string/at_least_five_sports_achievement_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/at_least_five_sports_achievement" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- all sports achievement -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_sports_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/at_least_five_sports_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/all_sports_achievement"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/all_sports_achievement_description"
            app:layout_constraintBottom_toTopOf="@id/all_sports_achievement_text"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/all_sports_achievement_black"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/all_sports_achievement_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="3dp"
            android:text="@string/all_sports_achievement_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_sports_achievement" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>