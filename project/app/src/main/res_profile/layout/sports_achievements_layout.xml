<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/at_least_one_sport_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/at_least_five_sports_layout"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/at_least_one_sport_achievement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/at_least_one_sport_achievement_description"
            app:srcCompat="@drawable/one_sport_achievement_black" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/at_least_five_sports_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@id/all_sports_layout"
        app:layout_constraintStart_toEndOf="@id/at_least_one_sport_layout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/at_least_five_sports_achievement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/at_least_five_sports_achievement_description"
            app:srcCompat="@drawable/five_sports_achievement_black"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/all_sports_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/at_least_five_sports_layout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/all_sports_achievement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/all_sports_achievement_description"
            app:srcCompat="@drawable/all_sports_achievement_black"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>