<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/equipment_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/equipment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="Equipment 1"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/equipment_unit_price_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Unit Price: "
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:id="@+id/equipment_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="5.00"
            android:textColor="@color/grey"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text=" â‚¬"
            android:textColor="@color/grey"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/equipment_quantity_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1sp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Quantity: "
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <TextView
            android:id="@+id/equipment_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1sp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="2"
            android:textColor="@color/grey"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </LinearLayout>

</LinearLayout>