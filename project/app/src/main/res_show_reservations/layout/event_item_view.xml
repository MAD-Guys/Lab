<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/white">

    <!-- Event text -->
    <TextView
        android:id="@+id/event_date_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/event_color"
        android:gravity="center"
        android:lineSpacingExtra="2.5dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.143"
        tools:ignore="TextContrastCheck"
        tools:text="THU\nJUN 30\n14:00" />

    <!--Colored view divider-->
    <View
        android:id="@+id/view"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/background_calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/event_date_text"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Event information -->
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/event_date_text"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Sport name -->
        <TextView
            android:id="@+id/event_sport_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="11-a-side Soccer" />

        <!-- Event Duration -->
        <TextView
            android:id="@+id/event_duration"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="1 hour 30 minutes" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
