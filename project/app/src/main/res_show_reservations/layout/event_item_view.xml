<?xml version="1.0" encoding="utf-8"?>

<!-- Item layout bound to the events recycler view -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/white">

    <!-- Event text -->
    <TextView
        android:id="@+id/event_date_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/event_color"
        android:gravity="center"
        android:lineSpacingExtra="2.5dp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.143"
        tools:ignore="TextContrastCheck"
        tools:text="THU\nJUN 30\n14:00" />

    <!--Colored view divider-->
    <View
        android:id="@+id/view_divider"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/background_calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/event_date_text"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Event information -->
    <LinearLayout
        android:id="@+id/event_information_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="2dp"
        android:paddingVertical="2.5dp"
        app:layout_constraintBottom_toBottomOf="@id/event_date_text"
        app:layout_constraintEnd_toStartOf="@id/event_duration"
        app:layout_constraintStart_toEndOf="@id/event_date_text"
        app:layout_constraintTop_toTopOf="@id/event_date_text">

        <!-- Event sport name -->
        <TextView
            android:id="@+id/event_sport_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="11-a-side Soccer" />

        <!-- Event more info -->
        <TextView
            android:id="@+id/event_more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Sport Center 1 - Playground 2" />

    </LinearLayout>

    <!-- Event duration -->
    <TextView
        android:id="@+id/event_duration"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:padding="1dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:drawableStartCompat="@drawable/round_hourglass_bottom_24"
        app:layout_constraintBottom_toBottomOf="@id/event_information_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_information_container"
        tools:text="30m" />

</androidx.constraintlayout.widget.ConstraintLayout>
