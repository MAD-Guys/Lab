<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_available_reservations_box"
    android:layout_width="match_parent"
    android:layout_height="60sp"
    android:layout_margin="1dp"
    android:background="@drawable/no_available_reservations_container_bg"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_available_reservations_alert"
        android:textSize="13sp"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:includeFontPadding="false"
        android:textColor="@color/no_available_reservations_text_color"/>

</RelativeLayout>