<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ShowProfileActivity">

        <!-- LinearLayout for the profile picture (3/10 of the screen) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:background="@color/background_blue"
            android:orientation="vertical"
            android:scrollIndicators="none">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/profile_picture"
                app:srcCompat="@drawable/user_profile_icon" />

        </LinearLayout>

        <!-- LinearLayout for the profile information (7/10 of the screen) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="7"
            android:background="@color/background_orange"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- Section 1: General information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <!-- LinearLayout for the name and nickname -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fullName"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/first_name"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/nickname"
                        android:textColor="@color/light_grey"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- LinearLayout for the remaining informations -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagePerson"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:contentDescription="@string/image_person_content_description"
                            app:srcCompat="@drawable/baseline_person_24" />

                        <TextView
                            android:id="@+id/sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/sex"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/age"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:contentDescription="@string/image_location_content_description"
                            app:srcCompat="@drawable/baseline_location_on_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/lives_in"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/location"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- LinearLayout for the buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button_add_friend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="6dp"
                        android:text="@string/add_friend_button"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:icon="@drawable/baseline_person_add_24"
                        app:iconGravity="textStart"
                        app:iconTint="#000000" />

                    <Button
                        android:id="@+id/button_message"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/blue_200"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="6dp"
                        android:text="@string/message_button"
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:icon="@drawable/baseline_forum_24"
                        app:iconGravity="textStart"
                        app:iconTint="#000000" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/sport_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:background="?android:attr/listDivider" />


            <!-- Section 2: Sports -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <!-- title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/sports_title"
                    android:textColor="@color/black"

                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport1"
                            android:visibility="visible"
                            app:chipBackgroundColor="@color/pale_orange"
                            app:chipIcon="@drawable/level_badge_beginner" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport2"
                            app:chipBackgroundColor="@color/pale_green"
                            app:chipIcon="@drawable/level_badge_intermediate" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport3"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport3"
                            app:chipBackgroundColor="@color/pale_blue"
                            app:chipIcon="@drawable/level_badge_pro" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport4"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport4"
                            app:chipBackgroundColor="@color/pale_ametista"
                            app:chipIcon="@drawable/level_badge_intermediate" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport5"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport5"
                            app:chipBackgroundColor="@color/pale_lighter_blue"
                            app:chipIcon="@drawable/level_badge_beginner" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport6"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport6"
                            app:chipBackgroundColor="@color/pale_lighter_green"
                            app:chipIcon="@drawable/level_badge_intermediate" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport7"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport7"
                            app:chipBackgroundColor="@color/pale_lighter_yellow"
                            app:chipIcon="@drawable/level_badge_beginner" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport8"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport8"
                            app:chipBackgroundColor="@color/pale_lighter_grey"
                            app:chipIcon="@drawable/level_badge_intermediate" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport9"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport9"
                            app:chipBackgroundColor="@color/pale_lighter_orange"
                            app:chipIcon="@drawable/level_badge_pro" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSport10"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:layoutDirection="rtl"
                            android:clickable="false"
                            android:text="@string/sport10"
                            app:chipBackgroundColor="@color/pale_lighter_red"
                            app:chipIcon="@drawable/level_badge_beginner" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/Bio_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:background="?android:attr/listDivider" />

            <!-- Section 3: Bio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!-- title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/bio_title"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <!-- bio -->
                <TextView
                    android:id="@+id/bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/bio"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>