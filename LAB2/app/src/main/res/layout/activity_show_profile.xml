<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".ShowProfileActivity">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_orange">

        <!-- Profile picture box
        (put a default length which will be programmatically overwritten at run time) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_picture_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/picture_default_size"
            android:background="@color/profile_picture_background"
            android:paddingHorizontal="@dimen/standard_padding">
            <!-- background profile picture -->
            <ImageView
                android:id="@+id/background_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/background_profile_picture"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/background_user_profile_picture"
                tools:ignore="ImageContrastCheck" />
            <!-- Profile picture -->
            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/profile_picture"
                app:srcCompat="@drawable/user_profile_picture_noaplha"
                tools:ignore="ImageContrastCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Profile information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section 1: General information -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- first name -->
                <TextView
                    android:id="@+id/first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/first_name"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!-- last name -->
                <TextView
                    android:id="@+id/last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/last_name"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toEndOf="@+id/first_name"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="5sp"/>
                <!-- @username -->
                <TextView
                    android:id="@+id/at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="\@"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/default_text_size"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@+id/first_name"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/username"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/default_text_size"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@+id/first_name"
                    app:layout_constraintStart_toEndOf="@id/at"/>

                <!-- User sex and age information -->
                <LinearLayout
                    android:id="@+id/user_sex_and_age_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/username"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="4sp">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/person_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/image_person_content_description"
                        app:srcCompat="@drawable/baseline_person_24" />
                    <!-- user sex -->
                    <TextView
                        android:id="@+id/user_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/user_gender"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_text_size"
                        android:includeFontPadding="false"/>
                    <!-- comma -->
                    <TextView
                        android:id="@+id/comma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_medium"
                        android:text=", "
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_text_size"
                        tools:ignore="HardcodedText"
                        android:includeFontPadding="false"/>
                    <!-- user age -->
                    <TextView
                        android:id="@+id/user_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/user_age"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_text_size"
                        android:includeFontPadding="false"/>

                </LinearLayout>

                <!-- User location -->
                <LinearLayout
                    android:id="@+id/user_location_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/user_sex_and_age_wrapper"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="4sp"
                    tools:ignore="UseCompoundDrawables">

                    <!-- icon -->
                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/image_location_content_description"
                        app:srcCompat="@drawable/baseline_location_on_24" />

                    <!-- User location -->
                    <TextView
                        android:id="@+id/user_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4sp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/user_location"
                        android:textColor="@color/black"
                        android:textSize="@dimen/default_text_size"
                        android:includeFontPadding="false"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <!-- Add Friend Button -->
                <Button
                    android:id="@+id/button_add_friend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:layout_marginEnd="8sp"
                    app:layout_constraintTop_toBottomOf="@id/user_location_wrapper"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_message"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="10.5dp"
                    android:paddingBottom="10.5dp"
                    android:text="@string/add_friend_button"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    app:icon="@drawable/baseline_person_add_24"
                    android:contentDescription="@string/add_friend_button_description"
                    app:iconGravity="textStart"
                    app:iconTint="#000000" />
                <!-- Message Button -->
                <Button
                    android:id="@+id/button_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:layout_marginVertical="10sp"
                    android:backgroundTint="@color/blue_200"
                    android:fontFamily="@font/poppins_bold"
                    android:includeFontPadding="false"
                    android:paddingTop="10.5dp"
                    android:paddingBottom="10.5dp"
                    android:text="@string/message_button"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    app:icon="@drawable/baseline_forum_24"
                    android:contentDescription="@string/message_button_description"
                    app:iconGravity="textStart"
                    app:iconTint="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_location_wrapper"
                    app:layout_constraintStart_toEndOf="@id/button_add_friend"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- line divider -->
            <View
                android:id="@+id/sport_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="?android:attr/listDivider" />

            <!-- Section 2: Sports -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sport title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/sports_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/section_title_text_size"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="8sp"/>

                <!-- Sports Pills -->
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <!-- Basket -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/basketChip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport1"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/beginner_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- 11-a-side-Football -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/football11Chip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport2"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/intermediate_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- 5-a-side-Football -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/football5Chip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport3"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/pro_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- 8-a-side-Football -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/football8Chip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport4"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/intermediate_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- Tennis -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/tennisChip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport5"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/expert_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- Volleyball -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/volleyballChip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport6"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/intermediate_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- Table Tennis -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/tableTennisChip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport7"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/beginner_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- Beach Volley -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/beachVolleyChip"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport8"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/intermediate_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- Padel -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/padelChip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:clickable="false"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport9"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/pro_level_badge"
                        tools:ignore="TextContrastCheck"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>
                    <!-- Mini Golf -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/miniGolfChip"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/chip_height"
                        android:fontFamily="@font/poppins_bold"
                        android:layoutDirection="rtl"
                        android:clickable="false"
                        android:visibility="visible"
                        app:chipIconSize="@dimen/chip_icon_size"
                        android:textSize="@dimen/chip_text_size"
                        app:textStartPadding="@dimen/chip_text_start_padding"
                        app:textEndPadding="@dimen/chip_text_end_padding"
                        android:layout_marginEnd="@dimen/chip_margin_end"
                        android:text="@string/sport10"
                        app:chipBackgroundColor="@color/selected_chip_color"
                        app:chipIcon="@drawable/expert_level_badge"
                        app:chipStrokeColor="@color/selected_chip_border_color"
                        app:chipStrokeWidth="0.8dp"/>

                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <!-- line divider -->
            <View
                android:id="@+id/bio_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="?android:attr/listDivider" />

            <!-- Section 3: Bio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20sp">

                <!-- title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/bio_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/section_title_text_size"
                    android:includeFontPadding="false"
                    android:layout_marginBottom="8sp"/>

                <!-- bio -->
                <TextView
                    android:id="@+id/user_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/user_bio"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size"
                    android:includeFontPadding="false"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>