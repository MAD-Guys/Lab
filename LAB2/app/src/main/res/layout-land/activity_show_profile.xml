<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".ShowProfileActivity">

    <!-- LinearLayout for the profile picture -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/background_blue"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:contentDescription="@string/profile_picture"
            app:srcCompat="@drawable/user_profile_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/background_orange"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="6dp"
        android:paddingBottom="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Section 1: General information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    >

                    <!-- LinearLayout for the name and nickname -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/fullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="@string/first_name"
                            android:textColor="@color/black"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/nickname"
                            android:textColor="@color/light_grey"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- LinearLayout for the remaining informations -->
                    <LinearLayout
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imagePerson"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/image_person_content_description"
                                app:srcCompat="@drawable/baseline_person_24" />

                            <TextView
                                android:id="@+id/sex"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"

                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/sex"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/age"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/image_location_content_description"
                                app:srcCompat="@drawable/baseline_location_on_24" />

                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/location"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- LinearLayout for the buttons -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingHorizontal="4dp">

                        <Button
                            android:id="@+id/button_add_friend"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center_vertical|center_horizontal"
                            app:icon="@drawable/baseline_person_add_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconTint="#000000" />

                        <Button
                            android:id="@+id/button_message"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/blue_200"
                            android:fontFamily="@font/poppins_bold"
                            android:foregroundGravity="center"
                            app:icon="@drawable/baseline_forum_24"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconTint="#000000" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/sport_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="2dp"
                    android:background="?android:attr/listDivider" />

                <!-- Section 2: Sports -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <!-- title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/sports_title"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <com.google.android.material.chip.ChipGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipSport1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layoutDirection="rtl"
                                    android:text="@string/sport1"
                                    app:chipBackgroundColor="@color/pale_orange"
                                    app:chipIcon="@drawable/level_badge_beginner" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipSport2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layoutDirection="rtl"
                                    android:text="@string/sport2"
                                    app:chipBackgroundColor="@color/pale_green"
                                    app:chipIcon="@drawable/level_badge_intermediate" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipSport3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layoutDirection="rtl"
                                    android:text="@string/sport3"
                                    app:chipBackgroundColor="@color/pale_blue"
                                    app:chipIcon="@drawable/level_badge_pro" />

                            </com.google.android.material.chip.ChipGroup>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <View
                    android:id="@+id/Bio_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="2dp"
                    android:background="?android:attr/listDivider" />

                <!-- Section 3: Bio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <!-- title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/bio_title"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <!-- bio -->
                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/bio"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</LinearLayout>

